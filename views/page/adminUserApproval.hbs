<!-- Services Section -->
<section id="overview" class="bg-light-gray">

    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h2>List of users</h2>
                <!--<p>The .table-responsive class creates a responsive table which will scroll horizontally on small devices (under 768px). When viewing on anything larger than 768px wide, there is no difference:</p>-->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Email</th>
                            <th>Access Status</th>
                            <th>Toggle Access</th>

                        </tr>
                        </thead>
                        <tbody>

                        {{# if rowDataHasItem}}
                            {{#each rowData}}


                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{name}}</td>
                                    <td>{{accessStatus}}</td>


                                    <td>
                                        <form action="/page/adminUserApprovalToggle" method="post">
                                            <input type="text" value="{{id}}" name="id" hidden>
                                            <button type="submit" class="btn btn-primary btn-sm">Toggle</button>

                                        </form>
                                    </td>

                                </tr>


                            {{/each}}


                        {{/if}}




                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-2">

                <script>


                    function submitclick() {
                        document.getElementById("submitclicked").value = "click"

                    }
                </script>


                <form class="panel panel-default" action='/page/adminUserApproval' method="get" id="registerForm">
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-check col-md-3">
                                <label style="text-decoration: underline;">Approve/Deny</label>
                            </div>
                        </div>
                        <br>

                        <div class="row">
                            <div class="form-check col-md-3">
                                <div class="form-check">
                                    <input id="toggle-trigger" type="checkbox" name="approvalcheckbox" checked data-toggle="toggle"
                                           data-on="Requesting" data-off="Approved" data-offstyle="info">
                                    <input id="submitclicked" type="text" name="submitclicked" hidden>
                                </div>
                            </div>
                        </div>


                        <label id="exampleRadiosLabel" style="color: red;visibility: hidden;"></label>
                        <br>
                        <button type="submit" onclick="submitclick()" class="btn btn-sm">Submit</button>

                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

